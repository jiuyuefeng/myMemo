<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#fff5ee"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<com.vlife.mymemo.ui.DateLine
    android:id="@+id/date_edit"
    android:layout_width="300dp"
    android:layout_height="30dp"
    android:gravity="center"
    android:background="@drawable/shapetop"
    android:textColor="#000000"
    android:layout_marginTop="10dp"
    android:layout_centerHorizontal="true" />
<com.vlife.mymemo.ui.DrawLine
    android:id="@+id/content_edit"
    android:layout_width="300dp"
    android:layout_height="100dp"
    android:textSize="18sp"
    android:textColor="#ff000000"
    android:gravity="top"
    android:background="@drawable/shape"
    android:scrollbars="vertical"
    android:layout_below="@id/date_edit"
    android:layout_centerHorizontal="true"
    android:lineSpacingExtra="3dp"
    android:layout_above="@+id/color_select_bar" />

    <Button
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:text="@string/Cancel"
        android:id="@+id/text_cancel_button"
        android:textColor="#ffffffff"
        android:background="#deb887"
        android:layout_alignTop="@+id/text_save_button"
        android:layout_alignRight="@+id/color_select_bar"
        android:layout_alignEnd="@+id/color_select_bar" />

    <Button
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:text="@string/Save"
        android:id="@+id/text_save_button"
        android:textColor="#ffffffff"
        android:background="#deb887"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/color_select_bar"
        android:layout_alignStart="@+id/color_select_bar"
        android:layout_marginBottom="46dp" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@mipmap/note_edit_color_selector_panel"
        android:id="@+id/color_select_bar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="117dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:background="#00000000"
        android:layout_width="45dp"
        android:layout_height="30dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/yellow_button"
        android:layout_alignBottom="@+id/color_select_bar" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:background="#00000000"
        android:layout_width="45dp"
        android:layout_height="30dp"
        android:id="@+id/blue_button"
        android:layout_marginLeft="110dp"
        android:layout_alignBottom="@+id/color_select_bar" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:background="#00000000"
        android:layout_width="45dp"
        android:layout_height="30dp"
        android:id="@+id/white_button"
        android:layout_marginLeft="163dp"
        android:layout_alignBottom="@+id/color_select_bar" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:background="#00000000"
        android:layout_width="45dp"
        android:layout_height="30dp"
        android:id="@+id/green_button"
        android:layout_marginLeft="223dp"
        android:layout_alignBottom="@+id/color_select_bar"
        />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:background="#00000000"
        android:layout_width="45dp"
        android:layout_height="30dp"
        android:id="@+id/red_button"
        android:layout_marginLeft="278dp"
        android:layout_alignBottom="@+id/color_select_bar" />
</RelativeLayout>
