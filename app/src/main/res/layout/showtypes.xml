<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="300dp"
        android:layout_height="27dp"
        android:textColor="#000000"
        android:gravity="center"
        android:id="@+id/dateTextView"
        android:background="@drawable/shapetop"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
         />

    <TextView
        android:layout_width="300dp"
        android:layout_height="68dp"
        android:textSize="18sp"
        android:textColor="#ff000000"
        android:background="@drawable/showbottom"
        android:id="@+id/contentTextView"
        android:layout_below="@+id/dateTextView"
        android:layout_centerHorizontal="true"
        />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:id="@+id/smallbutton1"
        android:background="@drawable/smallbutton1"
        android:focusable="false"
        android:layout_marginLeft="7dp"
        android:layout_above="@id/contentTextView"
        android:layout_alignLeft="@+id/contentTextView" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:id="@+id/smallbutton2"
        android:background="@drawable/smallbutton2"
        android:focusable="false"
        android:layout_marginRight="7dp"
        android:layout_above="@id/contentTextView"
        android:layout_alignRight="@id/contentTextView" />

</RelativeLayout>
