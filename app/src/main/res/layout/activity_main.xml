<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffefd5"
    tools:context="com.vlife.mymemo.mainactivity.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:textSize="30sp"
        android:gravity="center_horizontal"
        android:paddingTop="5dp"
        android:background="@drawable/title_background"
        android:text="@string/Create_memo"
        android:id="@+id/title_text_show"
        android:layout_alignParentTop="true" />
    <Button
        android:textColor="#ffffffff"
        android:background="@drawable/imagebutton_background"
        android:layout_marginLeft="7dp"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:id="@+id/memo_add_button" />

    <Button
        android:textColor="#ffffffff"
        android:background="@drawable/number"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:id="@+id/number_button"
        android:layout_marginRight="7dp"
        android:layout_alignRight="@id/title_text_show" />

    <ListView

        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/memo_list_show"
        android:listSelector="#00000000"
        android:layout_below="@+id/memo_add_button"
        />




</RelativeLayout>
